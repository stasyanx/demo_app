<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { role: 'form', class: 'form-horizontal',method: :post }) do |f| %>
  <%= devise_error_messages! %>
    <div class="form-group">
  <%= f.label :email, class: 'col-sm-1 required' %>
      <div class="col-sm-5">
      <%= f.email_field :email, autofocus: true , class: 'form-control' %>
    </div>
    </div>
  <div><%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
