


<h2><%= t ('.sign_in') %> </h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: 'form', class: 'form-horizontal'}) do |f| %>
    <div class="form-group">
      <%= f.label :email , class: 'col-sm-2 required'%>
      <div class="col-sm-5">
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password , class: 'col-sm-2 required'%>
      <div class="col-sm-5">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign in", class: 'btn btn-primary btn-lg  btn-block' %></div>
<% end %>

<%= render "devise/shared/links" %>
