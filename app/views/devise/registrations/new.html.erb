<h2><%= t ('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: 'form', class: 'form-horizontal'}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, class: 'col-sm-2 required' %>
      <div class="col-sm-5">
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'col-sm-2 required' %>
      <div class="col-sm-5">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'col-sm-2 required' %>
      <div class="col-sm-5">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>

    <%= f.submit "Sign up", class: 'btn btn-primary', style: 'margin-top: 10px' %>
<% end %>

<%= render "devise/shared/links" %>
