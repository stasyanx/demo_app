<%= form_for [:admin, @post], html: {role: 'form', class: 'form-horizontal'} do |f| %>

    <%= validation_errors(@post)%>

    <div class="form-group">
      <%= f.label :title, class: 'col-sm-1 required' %>
      <div class="col-sm-5">
        <%= f.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :theme, class: 'col-sm-1 required' %>
      <div class="col-sm-5">
        <%= f.text_field :theme, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :text, class: 'col-sm-1 required' %>
      <div class="col-sm-5">
        <%= f.text_area :text, size: '5x5', class: 'form-control' %>

        <div class="form-group">
          <%= f.label :image, class: 'col-sm-1' do %>

          <% end %>
          <div class="col-sm-3">

          </div>
          <div class="col-sm-5" >
            <%= f.file_field :image ,class:'form-control'%>

          </div>
        </div>

      </div>
    </div>
    <div class="panel-footer">
    <%= f.submit 'Add Post', class: 'btn ' %>
      <%= link_to 'Back', request.referer, class: 'btn btn-warning' %>

    </div>
<% end %>